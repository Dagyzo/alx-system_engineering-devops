#!/usr/bin/env bash

# Script: check_user.sh
# Description: This script accepts one argument (a username) and runs the 'whoami' command
#              under the specified user to check the current user.

if [ $# -ne 1 ]; then
  echo "Usage: $0 <username>"
  exit 1
fi

# Get the username passed as an argument
username=$1

# Check if the user exists
if id "$username" &>/dev/null; then
  # Run 'whoami' command as the specified user
  sudo -u "$username" whoami
else
  echo "User '$username' does not exist."
fi

